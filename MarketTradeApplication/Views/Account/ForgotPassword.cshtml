@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-6 mt-5 border border-4 p-4 rounded" >
        <form method="post" asp-action="ForgotPassword">
            <h3 class="text-center text-muted mb-2" style="font-size:20px;"></h3>
            <hr />
            <div class="mb-3">
                <p>Please submit your details below to reset your password</p>
                <input  type="email" class="form-control" autocomplete="on" asp-for="Email" placeholder="Enter your email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="row">
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-primary btn-block">submit</button>
                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }