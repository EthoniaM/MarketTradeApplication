@model ForgotPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-5 mt-5 border border-4 p-4 rounded">
        <form method="post" asp-action="ResetPassword">
            <h3 class="text-center text-muted mb-2" style="font-size:20px;">Reset Password</h3>
            <hr />
            <div class="mb-3">
                <label class="mb-2" asp-for="Password"></label>
                <input type="password" class="form-control" autocomplete="on" asp-for="Password"/>
                <input  type="hidden" asp-for="UserId"/>
                <input  type="hidden" asp-for="Token"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="mb-3">
                <label class="mb-2" asp-for="ConfirmPassword"></label>
                <input type="password" class="form-control" autocomplete="on" asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="row">
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-primary btn-block">submit</button>
                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

